{
  "role-name": "%%mlAppName%%-unit-tester",
  "description": "CAUTION! This role contains privileges that allow it to run unit tests. It should be granted for any other purpose and not even exist in a production environment.",
  "role": [
    "%%mlAppName%%-may-run-unit-tests",
    "%%mlAppName%%-endpoint-consumer",
    "rest-extension-user",
    "rest-admin"
  ],
  "privilege": [
    {
      "privilege-name": "remove-role",
      "action": "http://marklogic.com/xdmp/privileges/remove-role",
      "kind": "execute"
    },
    {
      "privilege-name": "role-exists",
      "action": "http://marklogic.com/xdmp/privileges/get-role",
      "kind": "execute"
    },
    {
      "privilege-name": "xdmp:invoke",
      "action": "http://marklogic.com/xdmp/privileges/xdmp-invoke",
      "kind": "execute"
    },
    {
      "privilege-name": "xdmp:invoke-in",
      "action": "http://marklogic.com/xdmp/privileges/xdmp-invoke-in",
      "kind": "execute"
    },
    {
      "privilege-name": "xdmp:login",
      "action": "http://marklogic.com/xdmp/privileges/xdmp-login",
      "kind": "execute"
    },
    {
      "privilege-name": "unprotected-uri",
      "action": "http://marklogic.com/xdmp/privileges/unprotected-uri",
      "kind": "execute"
    }
  ]
}
